<h1>Recent tweets</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Status</th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.status %>
      <div class="btn-group pull-right">
        <%= link_to raw('<i class	="icon-eye-open"></i>'), tweet, :class => "btn", :title => "Show" %>
        <%= link_to raw('<i class="icon-pencil"></i>'), edit_tweet_path(tweet), :class => "btn", :title => "Edit" %>
        <%= link_to raw('<i class="icon-trash icon-white"></i>'), tweet, :class => "btn btn-danger", :title => "Destroy", method: :delete, data: { confirm: 'Are you sure?' } %>
      </div> <!-- /btn-group -->
  	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tweet', new_tweet_path, { :class => "btn btn-primary" } %>
